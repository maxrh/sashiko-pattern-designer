# Service Worker files - cache for 1 hour, revalidate after
/sw.js
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400

/workbox-*.js
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400

# Version file - cache for 1 hour, revalidate after
/version.json
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400

# HTML - serve fresh but allow stale-while-revalidate
/*.html
  Cache-Control: public, max-age=0, stale-while-revalidate=3600

# Static assets - cache but revalidate
/_astro/*
  Cache-Control: public, max-age=31536000, immutable
