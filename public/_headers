# Service Worker files - always check for updates
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

/workbox-*.js
  Cache-Control: no-cache, no-store, must-revalidate

# Version file - always fresh
/version.json
  Cache-Control: no-cache, no-store, must-revalidate

# HTML - 1 hour cache, revalidate after
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Static JS/CSS - short cache for development / set to 7-30 days for production
/_astro/*.js
  Cache-Control: public, max-age=3600, must-revalidate

/_astro/*.css
  Cache-Control: public, max-age=3600, must-revalidate

# Images and fonts - 30 day cache
/_astro/*.png
  Cache-Control: public, max-age=2592000, immutable

/_astro/*.jpg
  Cache-Control: public, max-age=2592000, immutable

/_astro/*.svg
  Cache-Control: public, max-age=2592000, immutable

/_astro/*.woff
  Cache-Control: public, max-age=2592000, immutable

/_astro/*.woff2
  Cache-Control: public, max-age=2592000, immutable
